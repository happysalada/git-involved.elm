{
  "name": "git-involved.elm",
  "description": "Github issue filtering for OSS written in Elm",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Justin Kovalchuk",
  "homepage": "https://github.com/lamogura/git-involved.elm",
  "repository": {
    "type": "git",
    "url": "https://github.com/lamogura/git-involved.elm"
  },
  "engines": {
    "node": "latest",
    "yarn": "latest"
  },
  "bugs": {
    "url": "https://github.com/lamogura/git-involved.elm/issues"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "stage-2"
          ],
          "plugins": [
            [
              "add-module-exports"
            ],
            [
              "transform-async-to-generator"
            ],
            [
              "transform-es2015-modules-commonjs"
            ],
            [
              "transform-inline-environment-variables"
            ],
            [
              "transform-object-rest-spread",
              {
                "useBuiltIns": true
              }
            ]
          ]
        }
      ]
    ]
  },
  "scripts": {
    "test": "./node_modules/.bin/elm-test tests/RunTestsInTerminal.elm",
    "start": "node server.js",
    "dev:server": "nodemon server.js",
    "dev:client": "elm-live --output=frontend/elm.js app/App.elm --pushstate --open --debug --dir=frontend",
    "prebuild": "rimraf public/*",
    "build": "yarn build:elm && yarn build:assets && yarn build:images && yarn build:css && yarn build:js && yarn build:html && yarn build:mark",
    "build:elm": "elm make app/App.elm --output=frontend/js/elm.js",
    "build:assets": "mkdir public/styles && mkdir public/js && mkdir public/assets && cp frontend/assets/favicon.ico public/assets/favicon.ico && cp frontend/assets/manifest.json public/assets/manifest.json && cp frontend/robots.txt public/robots.txt",
    "build:images": "imagemin frontend/assets/*.png --out-dir=public/assets",
    "build:css": "cleancss -O2 -o public/styles/index.css frontend/styles/cssRemoveAndCombine.css",
    "build:js": "uglifyjs frontend/js/elm.js -c -o public/js/elm.js && browserify -d frontend/js/analyticsBase.js -p [minifyify --map public/js/analytics.js.map --output public/js/analytics.js.map --uglify [ --compress ] ] > public/js/analyticsBase.js",
    "build:html": "html-minifier --config-file htmlMinifier.conf --output public/temp.html frontend/index.html",
    "build:mark": "hashmark -c public -r -l 6 -m public/assets.json 'assets/**/*.*' '{dir}/{name}-{hash}{ext}' && hashmark -s -c public -r -l 6 -m public/assets.json '**/*.{css,js}' '{dir}/{name}-{hash}{ext}' && awk 'BEGIN { FS = \"\\\"\" } ;FNR==NR { array[$2]=$4; next } { for (i in array) gsub(i,array[i])}1' public/assets.json public/temp.html > public/index.html",
    "postbuild": "rimraf public/temp.html && rimraf public/assets.json"
  },
  "dependencies": {
    "apicache": "^0.8.6",
    "autotrack": "^2.4.1",
    "babel-core": "^6.25.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "body-parser": "^1.17.2",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "dotenv-safe": "^4.0.4",
    "express": "^4.15.3",
    "namespaced-console-logger": "^1.0.1",
    "prerender-node": "^2.7.1",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "serve-favicon": "^2.4.3"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-inline-environment-variables": "^0.1.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "clean-css-cli": "^4.1.4",
    "elm": "^0.18.0",
    "hashmark": "3.1.0",
    "html-minifier": "^3.5.2",
    "imagemin-cli": "^3.0.0",
    "minifyify": "^7.3.5",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1",
    "uglify-js": "^3.0.15"
  }
}
