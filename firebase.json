{
  "hosting": {
    "public": "public",
    "headers": [{
      "source" : "**/*.@(jpg|jpeg|gif|png)",
      "headers" : [ {
      "key" : "Cache-Control",
      "value" : "max-age=86400"
      } ]
    },{
      "source" : "**/*.@(css|js)",
      "headers" : [ {
      "key" : "Cache-Control",
      "value" : "max-age=86400"
      } ]
    },{
      "source" : "**/*.@(html)",
      "headers" : [ {
      "key" : "Cache-Control",
      "value" : "no-cache"
      } ]
    }],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
